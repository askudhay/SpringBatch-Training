<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch
    http://www.springframework.org/schema/batch/spring-batch-3.0.xsd
    http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<import resource="DBConfig.xml" />

	<batch:job id="sequentialStepJob" restartable="false" job-repository="jobRepository">
		<batch:step id="initialiseJob">
			<batch:tasklet ref="initialiseImpl" />
		</batch:step>
	</batch:job>
	<bean id="initialiseImpl" class="com.cts.training.Step1" />

</beans>